{
  "name": "bitmovin-player-roku-analytics-conviva",
  "description": "Integration of the Bitmovin Roku Player SDK with the Conviva Analytics",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitmovin/bitmovin-player-roku-analytics-conviva.git"
  },
  "author": "Bitmovin",
  "watch": {
    "build": {
      "patterns": [
        "./ConvivaIntegration/components/*.*"
      ],
      "extensions": "brs,xml"
    }
  },
  "scripts": {
    "ensure_dist_folder": "mkdir -p ./dist",
    "watch": "npm-watch build",
    "serve": "npm run ensure_dist_folder && npm-run-all --parallel watch server",
    "server": "http-server ./dist",
    "build": "npm run ensure_dist_folder && bestzip ./dist/bitmovin-player-conviva-analytics.zip ./ConvivaIntegration/components/*"
  },
  "devDependencies": {
    "bestzip": "^2.1.2",
    "http-server": "^0.11.1",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.6.0"
  }
}
